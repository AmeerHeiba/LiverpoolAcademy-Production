<%- include("../partials/scripts", { title: "Manage Stories" }) %>

<%- include("../partials/nav") %>
<div class="container mt-5">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-center mb-4">Manage Success Stories</h2>
        <a href="/admin/dashboard/story/add" class="btn btn-primary shadow-sm">Add New Story</a>
    </div>
    
    <!-- Search Bar -->
    <div class="input-group mb-4 w-50 mx-auto">
        <input 
            type="text" 
            class="form-control shadow-sm" 
            id="searchBar" 
            placeholder="Search by story title or author" 
        >
        <button class="btn btn-outline-secondary shadow-sm" type="button" id="searchButton">
            <i class="fas fa-search"></i> Search
        </button>
    </div>

    <!-- Story Cards Section -->
    <div class="row">
        <% modelData.forEach(story => { %>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card story-card shadow-sm rounded">
                    <% if (story.photo) { %>
                        <img src="<%= story.photo %>" class="card-img-top story-photo" alt="<%= story.title %>">
                    <% } else { %>
                        <div class="card-img-top story-photo placeholder">No Image</div>
                    <% } %>
                    <div class="card-body">
                        <h5 class="card-title text-center"><%= story.title %></h5>
                        <p class="card-text text-center text-muted"><%= story.year %></p>
                        <p class="card-text"><strong>Author:</strong> <%= story.author %></p>
                        <p class="card-text"><strong>Created At:</strong> <%= story.createdAt ? story.createdAt.toDateString() : "Unknown" %></p>

                        <div class="d-flex justify-content-around mt-3">
                            <a class="btn btn-info btn-sm" title="View" ><i class="fas fa-eye" data-id="<%= story._id %>"></i> View</a>
                            <a href="/admin/dashboard/story/update/<%= story._id %>" class="btn btn-warning btn-sm" title="Edit"><i class="fas fa-edit"></i> Edit</a>
                            <button class="btn btn-danger btn-sm delete-item" data-id="<%= story._id %>" title="Delete" data-type="story"><i class="fas fa-trash-alt"></i> Delete</button>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<!-- Include Modals for Viewing Story Details -->
<%- include("../partials/viewStoryModal") %>
<script src="/js/dashboard.js"></script>
<%- include("../partials/footer") %>

</body>
</html>
