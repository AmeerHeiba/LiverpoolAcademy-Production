<%- include("../partials/scripts", { title: "Manage Services" }) %>

<%- include("../partials/nav") %>
<div class="container mt-5">
    <!-- Page Header -->
    <h2 class="text-center mb-4">Manage Services</h2>
    
    <!-- Search and Add New Service Button -->
    <div class="d-flex justify-content-between mb-3">
        <a href="/admin/dashboard/service/add" class="btn btn-primary shadow-sm">Add New Service</a>
    </div>

    <!-- Services Table -->
    <div class="table-responsive">
        <table class="table table-bordered table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Service Name</th>
                    <th>Description</th>
                    <th>Location</th>
                    <th>Birth Range</th>
                    <th>Sport</th>
                    <th>Training Days</th>
                    <th>Training Time</th>
                    <th>Fees</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% modelData.forEach(service => { %>
                    <tr id="<%= service._id %>">
                        <td><%= service.title %></td>
                        <td><%= service.description %></td>
                        <td><%= service.location %></td>
                        <td><%= service.birthRangeFrom %> - <%= service.birthRangeTo %></td>
                        <td><%= service.sport %></td>
                        <td><%= service.trainingDays %></td>
                        <td><%= service.trainingTimeFrom %> - <%= service.trainingTimeTo %></td>
                        <td>
                            <strong>1 Month:</strong> <%= service.oneMonth %><br>
                            <strong>3 Months:</strong> <%= service.threeMonth %><br>
                            <strong>Brothers:</strong> <%= service.brothers %>
                        </td>
                        <td>
                            <!-- Action Buttons -->
                            <a class="btn btn-info btn-sm shadow-sm" title="View">
                                <i class="fas fa-eye" data-id="<%= service._id %>"></i>
                            </a>
                            <a 
                                href="/admin/dashboard/service/update/<%= service._id %>" 
                                class="btn btn-warning btn-sm shadow-sm" 
                                title="Edit"
                            >
                                <i class="fas fa-edit"></i>
                            </a>
                            <button 
                                class="btn btn-danger btn-sm shadow-sm delete-item" 
                                data-id="<%= service._id %>" 
                                title="Delete" 
                                data-type="service"
                            >
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>

<!-- Include Modals for Viewing Details -->
<%- include("../partials/viewServiceModal") %>
<script src="/js/dashboard.js"></script>
<%- include("../partials/footer") %>

</body>
</html>
